<Page x:Class="PermGuide.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PermGuide"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Profile">

    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="280" Margin="10,10,0,0" VerticalAlignment="Top" Width="280">
            <Label Content="Логин"/>
            <TextBox x:Name="LoginTextBox" Height="23" TextWrapping="Wrap"/>
            <Label Content="Пароль"/>
            <PasswordBox x:Name="PasswordTextBox"/>
            <Label Content="Ник"/>
            <TextBox x:Name="NicknameTextBox" Height="23" TextWrapping="Wrap"/>
            <Button x:Name="ApplyButton" Content="Обновить"/>
        </StackPanel>
    </Grid>
</Page>
