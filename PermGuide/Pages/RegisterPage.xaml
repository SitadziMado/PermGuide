<Page x:Class="PermGuide.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PermGuide.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="RegisterPage">

    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="280" Margin="10,10,0,0" VerticalAlignment="Top" Width="280">
            <Label Content="Логин"/>
            <TextBox x:Name="LoginTextBox" Height="23" TextWrapping="Wrap" Text=""/>
            <Label Content="Пароль"/>
            <PasswordBox x:Name="Password"/>
            <Button x:Name="LoginButton" Content="Войти" Click="LoginButton_Click"/>
            <Label Content="Псевдоним"/>
            <TextBox x:Name="NicknameTextBox" Height="23" TextWrapping="Wrap" Text=""/>
            <Button x:Name="RegisterButton" Content="Зарегистрироваться" Click="RegisterButton_Click"/>
        </StackPanel>

    </Grid>
</Page>
